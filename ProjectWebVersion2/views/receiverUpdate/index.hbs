{{#section 'title'}} Cập nhật thông tin nhận hàng {{/section}} {{#section 'header'}}
<link rel="stylesheet" type="text/css" href="/assets/css/login.css">
<link rel="stylesheet" type="text/css" href="/assets/css/signup.css">
<link rel="stylesheet" type="text/css" href="/assets/css/update.css"> {{/section}}

<div style="background-color: #FAFAFA;" id="background">
  <!--Màu nền-->
  <content id="chaomung">Cập nhật thông tin nhận hàng</content>
  <div id="formUpdate">
    <form method="POST">
      {{#with account}}
      <div class="row">
        <!--Left Form-->
        <div style="width: 80%; padding-left:25%">
          <div class="nameField">
            HỌ TÊN
          </div>
          <input placeholder="Họ tên đầy đủ" name="name" class="inputField form-control" id="hotenInput" value="{{HoTenReceiver}}" required>

          <div class="nameField">
            ĐỊA CHỈ
          </div>
          <input placeholder="Địa chỉ" name="address" class="inputField form-control" value="{{DiaChiReceiver}}" id="diachiInput" required>
          <div class="nameField">
            SỐ ĐIỆN THOẠI
          </div>
          <input placeholder="Số điện thoại" name="phone" class="inputField form-control" value="{{SDTReceiver}}" id="sdtInput" required>
        </div>
        <!--Close left Form-->
      </div>

      <div>
        <button class="btn idCapNhat" type="submit">
          CẬP NHẬT
        </button>
      </div>
      {{/with}}
    </form>
  </div>
</div>
<!--Close màu nền-->

{{#section 'script'}}
<script type="text/javascript" src="/assets/js/productDetail.js"></script>
<script type="text/javascript">
  var testSdt = /^[0-9+]{2,4}$/i;

  $('#sdtInput').blur(function () {
    if (this.value === '') {
      $('#sdt').html("Không được để trống");
      $('#sdtInput').attr('style', 'border: 1px solid #ff3c00; box-shadow: 0px  0px 10px rgba(255,60,0,0.5);');
      $('#sdtInput').removeClass("validInput");
    }
    else {
      if (testSdt.test(this.value)) {
        $('#sdt').html('Bắt buộc');
        $('#sdtInput').attr('style', '');
        $('#sdtInput').addClass("validInput");
      }
      else {
        $('#sdt').html("Số điện thoại không hợp lệ");
        $('#sdtInput').attr('style', 'border: 1px solid #ff3c00; box-shadow: 0px  0px 10px rgba(255,60,0,0.5);');
        $('#sdtInput').removeClass("validInput");
      }
    }
  });

  $('#hotenInput').blur(function () {
