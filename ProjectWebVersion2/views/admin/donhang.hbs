{{#section 'header'}}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<link rel="stylesheet" href="/assets/plugins/datatables/dataTables.bootstrap.css">
<link rel="stylesheet" type="text/css" href="/assets/css/sanpham.css">
<link rel="stylesheet" type="text/css" href="/assets/css/dashboard.css">
 {{/section}}
<div class="body-content">
    <div id="myModal" class="modal">
        <!-- Modal content -->
        <div class="modal-content">
            <h2>Thêm sản phẩm</h2>
            <div class="row">
                <label>
                    Tên sản phẩm:
                    <input type="text" name="" id="inputTenSanPham" class="form-control" value="" required="required" placeholder="Tên sản phẩm"
                        title="">
                </label>
            </div>

            <div class="row">
                <label>
                    Loại sản phẩm:
                    <select name="" id="inputLoaiSanPham" class="form-control" required="required">
                        <option selected="selected">điện thoại</option>
                        <option>máy tính bảng</option>
                    </select>
                </label>
            </div>
            <div class="row">
                <label>
                    Nhà sản xuất:
                    <select name="" id="inputNhaSanXuat" class="form-control" required="required">
                        <option selected="selected">Sony</option>
                        <option>Iphone</option>
                    </select>
                </label>
            </div>

            <div class="row">
                <label for="">Giá mua:</label>
            </div>

            <div class="row">
                <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                    <input type="number" name="" id="inputGiaMua" class="form-control" value="" style="display: inline-block">
                </div>
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                    <label for="">VNĐ</label>
                </div>
            </div>

            <div class="row">
                <label for="">Giá bán:</label>
            </div>

            <div class="row">
                <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                    <input type="number" name="" id="inputGiaBan" class="form-control" value="" style="display: inline-block">
                </div>
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                    <label for="">VNĐ</label>
                </div>
            </div>
            <div class="row">
                <label>
                    Số lượng:
                    <input type="number" name="" id="inputSoLuong" class="form-control" value="" required="required" placeholder="số lượng" title="">
                </label>
            </div>
            <div class="row">
                <button type="button" id="btnThemSanPham" class="btn btn-success btn-modal">Thêm</button>
                <button type="button" id="btnHuyModal" class="btn btn-danger btn-modal">Hủy bỏ</button>
            </div>
        </div>
    </div>
    <div id="myModal-update" class="modal">
