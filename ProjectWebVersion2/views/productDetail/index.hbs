            {{#each sanPhamDetail}}
          <h2>{{TenSanPham}}</h2>
          {{/each}}
          <!--Màu sắc-->
            <div class="thongTinPhai">Màu sắc</div>
            <div class="hinhTron">
              <!--Hình tròn màu đen-->
              <svg height="30" width="30">
                <circle cx="15" cy="15" r="12" stroke="black" stroke-width="1" />
                <circle cx="15" cy="15" r="10" stroke="white" stroke-width="3" fill="black" class="den" />
              </svg>
              <div>Đen</div>
            </div>
            <!--Hình tròn màu đen-->
            <div>
            <!--Dung lượng-->
            <div class="thongTinPhai" style="margin-right: 20px;">Dung lượng</div>
            <button class="btn" id="dungLuong32" style="font-weight: bold;">
              32GB
            </button>
          </div>
          <!--Close dung lượng-->
            <h4>Vui lòng nhập số lượng</h4>
          </div>
          <div class="soLuongDT">
              <div class="count-input">
                <a class="incr-btn btnGiamKhoiGio" data-action="decrease" href="#">–</a>
                <input type="text" class="inputQuantity" name="quantity" value="1" />
                <a class="incr-btn btnThemVaoGio" data-action="increase" href="#">&plus;</a>
              </div>
            </div>
          <div class="row">
            <button class="btn btnThemDetail" onclick="$('#quantInput').fadeOut();return false;"><b>HỦY</b></button>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <button class="btn btnThemDetail btnThemVaoGio" onclick="$('#quantInput').fadeIn();return false;">THÊM VÀO GIỎ</button>
          </div>
          {{else}}
          <div class="row">
            <h4>Vui lòng đăng nhập để tiếp tục.</h4>
          </div>
          <div class="row">
            <button type="button" class="btn btn-success btn-md" id="btnChuyenDN">ĐĂNG NHẬP</button>
          </div>
          {{/if}}
