<script>
  $(".btnThemVaoGio").click(function (event) {
    if (sessionStorage.getItem("username")) {
    }
    else {
      $("#myModal").show();
    }
  });
  $("#btnXacNhanDK").click(function () {
    $("#myModal").hide();
    window.location.href = "/login";
  })
  $(document).keyup(function(e) {
     if (e.keyCode == 27) {
       $('#quantInput').fadeOut();
       return false;
    }
});
</script>
