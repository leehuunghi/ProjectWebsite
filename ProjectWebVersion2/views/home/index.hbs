<div id="myCarousel" class="carousel slide banner" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="/assets/img/banners/banner1.png" alt="Los Angeles">
        </div>
        <div class="item">
            <img src="/assets/img/banners/banner2.png" alt="Chicago">
        </div>

        <div class="item">
            <img src="/assets/img/banners/banner3.png" alt="New York">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev" style="background-image: none; margin-left: -50px;">
        <img src="/assets/icons/to-left-arrow.png" width="50px" class="btnLeft leftHome">
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next" style="background-image: none;">
        <img src="/assets/icons/to-right-arrow.png" width="50px" class="btnRight rightHome">
        <span class="sr-only">Next</span>
    </a>
</div>
