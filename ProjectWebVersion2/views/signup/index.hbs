{{#section 'header'}}
<link rel="stylesheet" type="text/css" href="/assets/css/login.css">
<link rel="stylesheet" type="text/css" href="/assets/css/signup.css"> {{/section}}
<div style="background-color: #FAFAFA;" id="background">
    <!--Màu nền-->
    <content id="chaomung">Chào mừng bạn đến với MobileN! Đăng ký ngay!</content>
    <div class="row" id="formLogin">
        <!--Left Form-->
        <div>
            <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
                <form method="POST" action="" role="form">
                    <div class="nameField">
                        EMAIL
                        <label class="batbuoc">*</label>
                    </div>
                    <input placeholder="Địa chỉ email" name="email" class="form-control inputField validInput" id="emailInput" required="">
                    <label class="batbuoc" id="email">Bắt buộc</label>
                    <div class="nameField">
                        HỌ TÊN
                        <label class="batbuoc">*</label>
                    </div>
                    <input placeholder="Số điện thoại" name="fullname" class="form-control inputField validInput" id="phoneInput" required="">
                    <label class="batbuoc" id="phone">Bắt buộc</label>
                    <div class="nameField">
                        SỐ ĐIỆN THOẠI
                        <label class="batbuoc">*</label>
                    </div>
                    <input placeholder="Họ tên đầy đủ" name="phone" class="form-control inputField validInput" id="hotenInput" required="">
                    <label class="batbuoc" id="hoten">Bắt buộc</label>
                    <div class="nameField">
                        MẬT KHẨU
                        <label class="batbuoc">*</label>
                    </div>
                    <input placeholder="******" name="password" class="form-control inputField validInput" type="password" id="matkhauInput"
                        required="">
                    <label class="batbuoc" id="matkhau">Bắt buộc</label>
                    <div class="nameField">
                        NHẬP LẠI MẬT KHẨU
                        <label class="batbuoc">*</label>
                    </div>
                    <input placeholder="******" class="form-control inputField validInput" type="password" id="retypeInput" required="">
                    <label class="batbuoc" id="nhaplaimatkhau">Bắt buộc</label>
                    <div class="nameField">
                        CHỨNG MINH NHÂN DÂN
                        <label class="batbuoc">*</label>
                    </div>
                    <input placeholder="Chứng minh nhân dân" name="cmnd" class="form-control inputField validInput" id="cmndInput" required="">
                    <label class="batbuoc" id="cmnd">Bắt buộc</label>
                    <div class="nameField">
                        NGÀY SINH
                        <label id="nameGioiTinh">GIỚI TÍNH</label>
                    </div>
                    <div id="finalRow">
                        <div id="divNgaySinh">
                            <input placeholder="DD/MM/YYYY" name="dob" type="date" id="ngaySinh" class="form-control validInput">
                            <div id="ngaysinh"></div>
                        </div>
                        <div id="divGioiTinh">
                            <select class="form-control" id="gioiTinh" name="sex">
                                <option selected="">Nam</option>
                                <option>Nữ</option>
                            </select>
                        </div>
                    </div>
