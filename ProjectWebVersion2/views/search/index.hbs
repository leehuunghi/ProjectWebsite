{{#section 'title'}} Kết quả tìm kiếm {{/section}} {{#section 'header'}}
<link rel="stylesheet" type="text/css" href="/assets/css/productView.css">
<link rel="stylesheet" type="text/css" href="/assets/css/searchByName.css"> {{/section}}

<div class="around">
  <!--Màu xung quanh-->
  <div class="container">
    <!--Container-->
    <!--Điện thoại di động-->
    <div id="textDauTrang">
      <content id="textTrangchu">Trang chủ</content>
      <img src="/assets/icons/directory.png" id="hinhMuiTen">
      <content style="font-size: 15px;">{{textSearch}}</content>
    </div>
    <!--Close điện thoại di động-->
    <div>
      <!--Banner-->
      <img width="100%" height="auto" src="/assets/img/banners/banner1.png">
    </div>
    <!--Banner-->
    <div class="row" id="phanSanPham">
      <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3" id="leftPart">
        <!--div bên trái-->
        <div id="phanLoai">
          <!--Khung nhà sản xuât-->
          <content id="titlePhanLoai">NHÀ SẢN XUẤT</content>
           {{#each nsx}}
          <div>
            <a href="/search?nsx={{tenNSX}}" onclick="clickNSX(this)">{{tenNSX}}</a>
          </div>
          {{/each}}
         
         {{#each nsxMore}}
          <div class="themNsx">
            <a href="/search?nsx={{NhaSanXuat}}" onclick="clickNSX(this)">{{NhaSanXuat}}</a>
          </div>
          {{/each}}
        
           {{#if hasMoreNSX}}
          <div id="phanXemThem">
            <a href="" onclick="return false;" class="xemThem">
              Xem thêm
              <img src="/assets/icons/down-arrow.png" id="hinhXemThem">
            </a>
          </div>
          <div id="phanThuGonNSX">
            <a href="" onclick="return false;" class="xemThem">
              Thu gọn
              <img src="/assets/icons/up-arrow.png" id="hinhXemThem">
            </a>
          </div>
          {{/if}}
          <img src="/assets/misc/seperator.png" width="100%">
        </div>
        <!--Close khung nhà sản xuât-->
        <div id="phanLoai">
          <!--Khung giá-->
          <content id="titlePhanLoai">GIÁ</content>
          <div>
            <content>Từ</content>
            <content id="den">Đến</content>
          </div>
          <form method="POST">
            <input type="text" class="form-control" name="from" id="tienTrai" value="0"> &nbsp -
            <input type="text" class="form-control" name="to" id="tienPhai">
            <div>
              <button class="btn" type="submit" id="OK">
                OK
              </button>
            </div>
          </form>
          <img src="/assets/misc/seperator.png" width="100%">
        </div>
        <!--Close khung giá-->
        <div id="phanLoai">
          <!--Khung đánh giá-->
          <content id="titlePhanLoai">ĐÁNH GIÁ</content>
          <div>
            <img src="/assets/icons/ratings/4.png" id="danhgia">
            <a href="/search?danhgia=4">(ít nhất 4 sao)
              <br>
            </a>
            <a>
              <img src="/assets/icons/ratings/3.png" id="danhgia">
              <a href="/search?danhgia=3">(ít nhất 3 sao)
                <br>
              </a>
              <a>
                <img src="/assets/icons/ratings/2.png" id="danhgia">
                <a href="/search?danhgia=2">(ít nhất 2 sao)
                  <br>
                </a>
                <a>
                  <img src="/assets/icons/ratings/1.png" id="danhgia">
                  <a href="/search?danhgia=1">(ít nhất 1 sao)
                    <br>
                  </a>
          </div>
          <img src="/assets/misc/seperator.png" width="100%">
        </div>
        <!--Close khung đánh giá-->
        <div id="phanLoai">
          <!--Khung kích thước màn hình-->
          <content id="titlePhanLoai">KÍCH THƯỚC MÀN HÌNH</content>
          <div>
            <a href="/search?minscreen=0&&maxscreen=4.5">Dưới 4.5 inch</a>
          </div>
          <div>
            <a href="/search?minscreen=4.5&&maxscreen=5">Từ 4.5 inch đến 5 inch</a>
          </div>
          <div>
            <a href="/search?minscreen=5&&maxscreen=5.5">Từ 5 inch đến 5.5 inch</a>
          </div>
          <div>
            <a href="/search?minscreen=5&&maxscreen=10">Trên 5 inch</a>
          </div>
          <img src="/assets/misc/seperator.png" width="100%">
        </div>
        <!--Close khung kích thước màn hình-->
        <div id="phanLoai">
          <!--Khung độ phân giải camera sau-->
          <content id="titlePhanLoai">ĐỘ PHÂN GIẢI CAMERA SAU</content>
          <div>
            <a href="/search?cmrmin=0&&cmrmax=8">Dưới 8 MP</a>
          </div>
          <div>
            <a href="/search?cmrmin=8&&cmrmax=10">Từ 8 MP đến 10 MP</a>
          </div>
          <div>
            <a href="/search?cmrmin=10&&cmrmax=14">Từ 10 MP đến 14 MP</a>
          </div>
          <div>
            <a href="/search?cmrmin=14&&cmrmax=16">Từ 14 MP đến 16 MP</a>
          </div>
          <div>
            <a href="/search?cmrmin=16&&cmrmax=25">Trên 16 MP</a>
          </div>
          <img src="/assets/misc/seperator.png" width="100%">
        </div>
        <!--Close khung độ phân giải camera sau-->
        <div id="phanLoai">
          <!--Khung độ phân giải camera trước-->
          <content id="titlePhanLoai">ĐỘ PHÂN GIẢI CAMERA TRƯỚC</content>
          <div>
            <a href="/search?cmrtruocmin=0&&cmrtruocmax=5">Dưới 5 MP</a>
          </div>
          <div>
            <a href="/search?cmrtruocmin=5&&cmrtruocmax=8">Từ 5 MP đến 8 MP</a>
          </div>
          <div>
            <a href="/search?cmrtruocmin=8&&cmrtruocmax=12">Từ 8 MP đến 12 MP</a>
          </div>
          <div>
            <a href="/search?cmrtruocmin=12&&cmrtruocmax=20">Trên 12 MP</a>
          </div>
          <img src="/assets/misc/seperator.png" width="100%">
        </div>
        <!--Close khung độ phân giải camera trước-->
        <div id="phanLoai">
          <!--Khung dung lượng pin-->
          <content id="titlePhanLoai">DUNG LƯỢNG PIN</content>
          <div>
            <a href="/search?pinmin=0&&pinmax=2500">Dưới 2500 mAh</a>
          </div>
          <div>
            <a href="/search?pinmin=2500&&pinmax=3500">Từ 2500 mAh đến 3500 mAh</a>
          </div>
          <div>
            <a href="/search?pinmin=3500&&pinmax=5000">Từ 3500 mAh đến 5000 mAh</a>
          </div>
          <div>
            <a href="/search?pinmin=3500&&pinmax=4000">Trên 3500 mAh</a>
          </div>
          <img src="/assets/misc/seperator.png" width="100%">
        </div>
        <!--Close khung dung lượng pin-->
        <div id="phanLoai">
          <!--Khung bộ nhớ-->
          <content id="titlePhanLoai">BỘ NHỚ</content>
          <div>
            <a href="/search?ram=8">8 GB</a>
          </div>
          <div>
            <a href="/search?ram=16">16 GB</a>
          </div>
          <div>
            <a href="/search?ram=32">32 GB</a>
          </div>
          <div>
            <a href="/search?ram=64">64 GB</a>
          </div>
          <div>
            <a href="/search?ram=128">128 GB</a>
          </div>
          <div>
            <a href="">256 GB</a>
          </div>
        </div>
        <!--Close khung bộ nhớ-->
      </div>
      <!--Close div bên trái-->
      <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
        <!--Div bên phải-->
        <div class="divTimThay">
          <content>Tìm thấy</content>
          <content style="font-weight: bold;">{{countSearch}} kết quả</content>
          <content>phù hợp với từ khóa</content>
          <content style="font-weight: bold;">{{textSearch}}:</content>
        </div>
          <div class="row">
            {{#each sanphamSearch}}
           
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 ">
            <a href="/product-detail/{{ID}}" style="text-decoration:none">
              <div class="thumbnail itemProduct">
                <img class="imgProduct2" src="/assets/img/products/{{ID}}/1.png" alt="{{TenSanPham}}" title="{{TenSanPham}}">
                <div class="caption" style="text-align:center">
                  <div class="nameProduct2">{{TenSanPham}}</div>
                <content class="priceProduct2">{{number_format GiaDaiDien}} đ</content>
                  <img src="/assets/icons/ratings/{{Rate}}.png" class="danhgiaRight">
                  <div id="btnThem">
                    <button class="btn Them btnThemVaoGio">THÊM VÀO GIỎ</button>
                  </div>
                </div>
              </div>
            </a>
            </div>
            {{/each}}
          </div>
        <!--Close wrapper-->
      </div>
      <!--Close div bên phải-->
    </div>
  </div>
  <!--Close Container-->
</div>
<!--Close Màu xung quanh-->

